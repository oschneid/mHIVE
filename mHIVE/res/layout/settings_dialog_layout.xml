<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtMinFrequencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Frequency:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <NumberPicker
            android:id="@+id/nmbrMinimumFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtMaxFrequencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Frequency:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <NumberPicker
            android:id="@+id/nmbrMaximumFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView 
        android:id="@+id/txtFrequencyMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency Mode"
        />
    
    <RadioGroup
        android:id="@+id/radgrpFrequencyMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  >

        <RadioButton
            android:id="@+id/radFrequencyLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Logarithmic" />

        <RadioButton
            android:id="@+id/radFrequencyLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear" />

        <RadioButton
            android:id="@+id/radFrequencyExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exponential" />
    </RadioGroup>

    
    <TextView 
        android:id="@+id/txtAmplitudeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amplitude Mode"
        />
    
    <RadioGroup
        android:id="@+id/radgrpAmplitudeMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  >

        <RadioButton
            android:id="@+id/radAmplitudeLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Logarithmic" />

        <RadioButton
            android:id="@+id/radAmplitudeLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear" />

        <RadioButton
            android:id="@+id/radAmplitudeExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exponential" />
    </RadioGroup>

</LinearLayout>